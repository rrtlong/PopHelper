<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_280"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_360"
        android:background="@drawable/bg_check_install_app">


    <ImageView
            android:id="@+id/ivInstalled"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivDownload"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_installed"/>

    <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="@dimen/dp_0"
            app:layout_constraintLeft_toRightOf="@id/ivInstalled"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_download_game"/>

</android.support.constraint.ConstraintLayout>
