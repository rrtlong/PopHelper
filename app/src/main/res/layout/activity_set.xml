<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_38"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_38"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_13"
                android:src="@drawable/icon_back_red"/>

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_38"
                android:text="设置"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_2e2e2e"/>
    </LinearLayout>

    <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:background="@color/color_dddddd"/>
    <TextView
            android:id="@+id/tvCheckUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="检查版本更新"
            android:paddingLeft="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_9"
            android:textColor="@color/color_2e2e2e"
            android:paddingRight="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:textSize="@dimen/sp_16"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical|left"/>

    <View
            android:id="@+id/bigLine1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tvOrder"
            android:background="@color/color_f9f9f9"/>

    <TextView
            android:id="@+id/tvAboutUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="关于我们"
            android:paddingLeft="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_9"
            android:textColor="@color/color_2e2e2e"
            android:paddingRight="@dimen/dp_16"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/bigLine1"
            android:textSize="@dimen/sp_16"
            android:drawableRight="@drawable/icon_more"
            android:gravity="center_vertical|left"/>
</LinearLayout>
