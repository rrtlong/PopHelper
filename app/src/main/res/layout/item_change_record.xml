<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_change_record"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_marginLeft="@dimen/dp_15"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:textSize="@dimen/sp_14"
              android:textColor="@color/black_60"
              android:text="2018-8-28  18:40:32"
              android:id="@+id/tvTime"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginLeft="@dimen/dp_15"
              android:layout_marginBottom="@dimen/dp_10"
              android:textSize="@dimen/sp_14"
              android:textColor="@color/black"
              android:text="零钱提现"
              android:id="@+id/tvContent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tvMoney"
              app:layout_constraintBottom_toBottomOf="@id/tvContent"
              app:layout_constraintTop_toTopOf="@id/tvContent"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginRight="@dimen/dp_10"

              android:text="+0.33元"
              android:textColor="@color/color_add"
              android:textSize="@dimen/sp_20"/>

</android.support.constraint.ConstraintLayout>
