<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="@dimen/dp_370"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_corner8">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="兑换钻石"
        android:textColor="@color/color_fe6257"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="我的零钱：80000元"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/etDiamond"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_f9f9f9_eaeaea1_corner5"
        android:gravity="center_vertical"
        android:hint="输入兑换钻石数"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_84"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_c6c6c6"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoney" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/maxExchangeBtn"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginRight="@dimen/dp_6"
        android:text="最大转化"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/etDiamond"
        app:layout_constraintRight_toRightOf="@id/etDiamond"
        app:layout_constraintTop_toTopOf="@id/etDiamond"
        app:qmui_backgroundColor="@color/color_fe6257"
        app:qmui_borderWidth="@dimen/dp_0"
        app:qmui_radius="@dimen/dp_3" />

    <TextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="您有N80元零钱最多可转化100个钻石"
        android:textColor="@color/color_fe6257"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/etDiamond"
        app:layout_constraintRight_toRightOf="@id/etDiamond"
        app:layout_constraintTop_toBottomOf="@id/etDiamond" />

    <TextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_61"
        android:text="1、零钱可以直接转化成为《红包消消乐》游戏内的钻石\n2、零钱转化的比例为10元=115钻石\n3、转化的钻石将以邮件的形式发送至助手APP手机号相同的游戏账号上，请注意查收哦～"
        android:textColor="@color/color_c6c6c6"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/etDiamond"
        app:layout_constraintRight_toRightOf="@id/etDiamond"
        app:layout_constraintTop_toBottomOf="@id/etDiamond" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_328"
        android:background="@color/color_ededed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_39"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_221e1e_60"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_line"
        app:layout_constraintTop_toBottomOf="@id/bottomLine" />

    <View
        android:id="@+id/vertical_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_39"
        android:background="@color/color_ededed"
        app:layout_constraintLeft_toRightOf="@id/tvCancel"
        app:layout_constraintRight_toLeftOf="@id/tvConfirm"
        app:layout_constraintTop_toBottomOf="@id/bottomLine" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_39"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/color_fe6257"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/vertical_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLine" />

</android.support.constraint.ConstraintLayout>
