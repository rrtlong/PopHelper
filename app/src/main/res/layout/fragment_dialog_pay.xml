<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:background="@drawable/shape_white_top_corner5">

    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toTopOf="parent"
            android:text="选择支付方式"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"/>
    <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_close_black"/>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/dp_1"
          android:id="@+id/topLine"
          app:layout_constraintTop_toBottomOf="@id/tvTitle"
          android:background="@color/color_ededed"/>

    <ImageView
            android:id="@+id/ivWx"
            android:src="@drawable/icon_wechat_120"
            android:layout_width="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_41"
            app:layout_constraintTop_toBottomOf="@id/topLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivZfb"
            android:layout_height="@dimen/dp_58"/>

    <TextView
            android:id="@+id/tvWx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivWx"
            android:text="微信支付"
            app:layout_constraintLeft_toLeftOf="@id/ivWx"
            app:layout_constraintRight_toRightOf="@id/ivWx"
            android:textColor="@color/black_60"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_21"/>

    <ImageView
            android:id="@+id/ivZfb"
            android:src="@drawable/icon_zfb"
            android:layout_width="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_41"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLine"
            app:layout_constraintLeft_toRightOf="@id/ivWx"
            android:layout_height="@dimen/dp_58"/>

    <TextView
            android:id="@+id/tvZfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivZfb"
            android:text="支付宝支付"
            app:layout_constraintLeft_toLeftOf="@id/ivZfb"
            app:layout_constraintRight_toRightOf="@id/ivZfb"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_38"
            android:textColor="@color/black_60"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_21"/>
</android.support.constraint.ConstraintLayout>
