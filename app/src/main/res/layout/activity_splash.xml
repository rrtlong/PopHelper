<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.moli.module.widget.widget.MLImageView
            android:id="@+id/mlAdv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_90"
            app:placeholderImage="@drawable/icon_adv"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/skipBtn"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_16"
            app:qmui_radius="@dimen/dp_10"
            app:qmui_borderWidth="@dimen/dp_0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            app:qmui_backgroundColor="@color/black_30"
            android:text="3 s"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_90"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_splash_bottom"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>
