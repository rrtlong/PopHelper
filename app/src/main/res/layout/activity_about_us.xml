<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_38"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_38"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_13"
                android:src="@drawable/icon_back_red"/>

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_38"
                android:text="关于我们"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_2e2e2e"/>

    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80"
            android:src="@drawable/icon_about_us"/>

    <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_2e2e2e"
            android:text="红包消消乐助手"/>

    <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:gravity="top"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_9b9b9b"
            android:text="当前版本1.0.0"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_4"
              android:layout_marginRight="@dimen/dp_4"
              android:gravity="center"
              android:textColor="@color/color_9b9b9b"
              android:textSize="@dimen/sp_12"
              android:layout_marginBottom="@dimen/dp_20"
              android:text="©2018 5moligame.com,all rights reserved\n北京莫离科技有限公司"/>

</LinearLayout>
