<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivWord"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="left|top"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/icon_act_word"/>

    <ImageView
            android:id="@+id/ivLaunchGame"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_gravity="right|top"
            android:src="@drawable/icon_launcher_game"/>


    <com.moli.module.widget.widget.JudgeNestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_38">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_305"
                    android:background="@drawable/bg_sign">

                <View
                        android:id="@+id/bgSignDefault"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginBottom="@dimen/dp_86"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/bg_sign_default"/>


                <TextView
                        android:id="@+id/t1"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v1"
                        app:layout_constraintRight_toRightOf="@id/v1"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="5000"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>
                <TextView
                        android:id="@+id/t2"
                        android:layout_width="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_height="@dimen/dp_14"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v2"
                        app:layout_constraintRight_toRightOf="@id/v2"
                        android:text="5000"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>
                <TextView
                        android:id="@+id/t3"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_2"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v3"
                        app:layout_constraintRight_toRightOf="@id/v3"
                        android:text="5"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>
                <TextView
                        android:id="@+id/t4"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        android:layout_marginTop="@dimen/dp_2"
                        app:layout_constraintLeft_toLeftOf="@id/v4"
                        app:layout_constraintRight_toRightOf="@id/v4"
                        android:text="100"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>
                <TextView
                        android:id="@+id/t5"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v5"
                        android:layout_marginTop="@dimen/dp_2"
                        app:layout_constraintRight_toRightOf="@id/v5"
                        android:text="1000"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>
                <TextView
                        android:id="@+id/t6"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v6"
                        app:layout_constraintRight_toRightOf="@id/v6"
                        android:text="1000"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:layout_marginTop="@dimen/dp_2"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>

                <TextView
                        android:id="@+id/t7"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_2"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        app:layout_constraintLeft_toLeftOf="@id/v7"
                        app:layout_constraintRight_toRightOf="@id/v7"
                        android:text="10"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/color_909090"
                        android:gravity="center"
                        android:background="@drawable/shape_e2e2e2_corner_50"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v1"
                        app:layout_constraintRight_toRightOf="@id/v1"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="1天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v2"
                        app:layout_constraintRight_toRightOf="@id/v2"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="2天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v3"
                        app:layout_constraintRight_toRightOf="@id/v3"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="3天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v4"
                        app:layout_constraintRight_toRightOf="@id/v4"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="4天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v5"
                        app:layout_constraintRight_toRightOf="@id/v5"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="5天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v6"
                        app:layout_constraintRight_toRightOf="@id/v6"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="6天"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintLeft_toLeftOf="@id/v7"
                        app:layout_constraintRight_toRightOf="@id/v7"
                        app:layout_constraintTop_toBottomOf="@id/bgSignDefault"
                        android:text="7天"/>

                <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_9"
                        app:layout_constraintTop_toTopOf="@+id/bgSignDefault"
                        app:layout_constraintLeft_toLeftOf="@id/bgSignDefault"
                        app:layout_constraintRight_toRightOf="@id/ivCursor"
                        android:layout_marginRight="@dimen/dp_22"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        android:background="@drawable/bg_ff6e26_radius9"/>

                <ImageView
                        android:id="@+id/v1"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toLeftOf="@id/bgSignDefault"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:src="@drawable/icon_gold_light"/>


                <ImageView
                        android:id="@+id/v2"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintRight_toLeftOf="@id/v3"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toRightOf="@id/v1"
                        android:src="@drawable/icon_diamond_drak"/>

                <ImageView
                        android:id="@+id/v3"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toRightOf="@id/v2"
                        app:layout_constraintRight_toLeftOf="@id/v4"
                        android:src="@drawable/icon_gold_dark"/>

                <ImageView
                        android:id="@+id/v4"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toRightOf="@id/v3"
                        app:layout_constraintRight_toLeftOf="@id/v5"
                        android:src="@drawable/icon_gold_dark"/>

                <ImageView
                        android:id="@+id/v5"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toRightOf="@id/v4"
                        app:layout_constraintRight_toLeftOf="@id/v6"
                        android:src="@drawable/icon_gold_dark"/>

                <ImageView
                        android:id="@+id/v6"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintLeft_toRightOf="@id/v5"
                        app:layout_constraintRight_toLeftOf="@id/v7"
                        android:src="@drawable/icon_gold_dark"/>

                <ImageView
                        android:id="@+id/v7"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        app:layout_constraintRight_toRightOf="@id/bgSignDefault"
                        android:layout_marginRight="@dimen/dp_2"
                        android:src="@drawable/icon_gold_dark"/>

                <ImageView
                        android:id="@+id/ivCursor"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_49"
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/dp_0"
                        android:layout_marginBottom="@dimen/dp_18"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bgSignDefault"
                        app:layout_constraintBottom_toBottomOf="@id/bgSignDefault"
                        android:src="@drawable/icon_gift_cursor"/>

                <TextView
                        android:id="@+id/tvReward"
                        app:layout_constraintLeft_toLeftOf="@id/ivCursor"
                        app:layout_constraintRight_toRightOf="@id/ivCursor"
                        app:layout_constraintTop_toTopOf="@id/ivCursor"
                        android:paddingLeft="@dimen/dp_1"
                        android:layout_width="@dimen/dp_44"
                        android:textSize="@dimen/sp_8"
                        android:drawableLeft="@drawable/icon_gold_light"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="5"
                        android:visibility="invisible"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_fdf055"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tvSign"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/bg_sign_selector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@+id/bgSignDefault"
                        app:layout_constraintRight_toRightOf="@id/bgSignDefault"
                        android:layout_marginBottom="@dimen/dp_22"/>

            </android.support.constraint.ConstraintLayout>

            <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    app:indicator_drawable_selected="@drawable/circle_indicator_white"
                    app:indicator_drawable_unselected="@drawable/circle_indicator_white50"
                    app:indicator_margin="@dimen/dp_3"
                    android:layout_height="@dimen/dp_80"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_recomand"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"/>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/topLayout"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </com.moli.module.widget.widget.JudgeNestedScrollView>


</FrameLayout>
