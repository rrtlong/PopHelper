<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="@dimen/dp_11"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_11"
            android:src="@drawable/icon_close_red"
            android:paddingLeft="@dimen/dp_20"/>

    <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_login_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.moli.module.widget.widget.ClearEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:inputType="number"
            android:maxLength="11"
            android:text=""
            android:background="@drawable/bg_stroke_black10_1px_corner5dp"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_54"
            android:textColor="@color/color_0a0909"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_163"/>

    <TextView
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_44"
            android:text="+86 | "
            android:alpha="0.8"
            android:gravity="center_vertical|right"
            app:layout_constraintTop_toTopOf="@id/etPhone"
            app:layout_constraintLeft_toLeftOf="@id/etPhone"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_0a0909"/>

    <EditText
            android:id="@+id/etCode"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:text=""
            android:background="@drawable/bg_stroke_black10_1px_corner5dp"
            android:alpha="0.8"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_0a0909"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            android:inputType="number"
            android:maxLength="6"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@id/etPhone"
            app:layout_constraintRight_toLeftOf="@id/rbGetCode"
            android:layout_marginRight="@dimen/dp_5"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/rbGetCode"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_44"
            android:textColor="@color/white"
            app:qmui_backgroundColor="@color/color_dddddd"
            app:qmui_radius="@dimen/dp_5"
            app:qmui_borderWidth="@dimen/dp_2"
            app:qmui_borderColor="@color/black_10"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="@id/etPhone"
            android:text="获取验证码"/>

    <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="登录"
            app:layout_constraintTop_toBottomOf="@id/etCode"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_black20_radius5dp"
            android:layout_marginRight="@dimen/dp_30"/>

    <TextView
            android:id="@+id/tvTip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续表示您同意红包消消乐小助手"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textColor="@color/color_9b9b9b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvProtocol"
            android:textSize="@dimen/sp_14"/>

    <TextView
            android:id="@+id/tvProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_fe6257"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginLeft="@dimen/dp_0"
            app:layout_constraintLeft_toRightOf="@id/tvTip1"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/sp_14"/>

</android.support.constraint.ConstraintLayout>
